@model WebApplication1.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Login Form Design</title>
    <link rel="stylesheet" href="style.css">
    <style>

        * {
            margin: 10;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            display: grid;
            place-items: center;
            background: url('../img/login1.jpg') center/cover no-repeat;
            font-family: fantasy;
            /*background: linear-gradient(-135deg, #c850c0, #4158d0); */
        }

        ::selection {
            background: #4158d0;
            color: #fff;
        }

        .wrapper {
            width: 400px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            display: grid; /* Yeni eklenen özellik */
            place-items: center; /* Yeni eklenen özellik */
        }

            .wrapper .title {
                font-size: 30px;
                font-weight: 600;
                text-align: center;
                line-height: 100px;
                color: black;
                user-select: none;
                border-radius: 15px 15px 15px 15px;
                background: linear-gradient(-135deg, #c850c0, #4158d0);
            }

            .wrapper form {
                padding: 10px 30px 50px 30px;
            }

                .wrapper form .field {
                    height: 50px;
                    width: 100%;
                    margin-top: 20px;
                    position: relative;
                }

                    .wrapper form .field input {
                        height: 100%;
                        width: 100%;
                        outline: none;
                        font-size: 17px;
                        padding-left: 20px;
                        border: 1px solid lightgrey;
                        border-radius: 25px;
                        transition: all 0.3s ease;
                    }

                        .wrapper form .field input:focus,
                        form .field input:valid {
                            border-color: #4158d0;
                        }

                    .wrapper form .field label {
                        position: absolute;
                        top: 50%;
                        left: 20px;
                        color: #999999;
                        font-weight: 400;
                        font-size: 17px;
                        pointer-events: none;
                        transform: translateY(-50%);
                        transition: all 0.3s ease;
                    }

        form .field input:focus ~ label,
        form .field input:valid ~ label {
            top: 0%;
            font-size: 16px;
            color: #4158d0;
            background: #fff;
            transform: translateY(-50%);
        }

        form .content {
            display: flex;
            width: 100%;
            height: 50px;
            font-size: 16px;
            align-items: center;
            justify-content: space-around;
        }

            form .content .checkbox {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            form .content input {
                width: 15px;
                height: 15px;
                background: red;
            }

            form .content label {
                color: #262626;
                user-select: none;
                padding-left: 5px;
            }

        form .field input[type="submit"] {
            color: black;
            border: none;
            padding-left: 0;
            margin-top: -10px;
            font-size: 20px;
            font-weight: 800;
            cursor: pointer;
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            transition: all 0.3s ease;
        }

            form .field input[type="submit"]:active {
                transform: scale(0.95);
            }

        form .signup-link {
            color: #262626;
            margin-top: 20px;
            text-align: center;
        }

            form .pass-link a,
            form .signup-link a {
                color: #4158d0;
                text-decoration: none;
            }

                form .pass-link a:hover,
                form .signup-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Hoş Geldiniz
        </div>

        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="field">
                @Html.EditorFor(model => model.UserMail, new { htmlAttributes = new { @type = "text", @required = "required" } })
                @Html.LabelFor(model => model.UserMail, "E-posta Adresi")
                @Html.ValidationMessageFor(model => model.UserMail, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                @Html.PasswordFor(model => model.UserPass, new { htmlAttributes = new { @type = "password", @required = "required" } })
                @Html.LabelFor(model => model.UserPass, "Şifre")
                @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
            </div>



            <div class="field">
                <input type="submit" value="Giriş Yap">
            </div>
        }

        <div class="signup-link">
            Üye değil misiniz? <a href="@Url.Action("AddOrEdit", "User")">Şimdi Kaydolun</a>
        </div>
    </div>
</body>
</html>
