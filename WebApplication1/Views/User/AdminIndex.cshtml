@model List<WebApplication1.Models.User>

@{ ViewBag.Title = "Admin Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Index</title>
    <link rel="stylesheet" href="style.css">
    <style>
        * {
            font-family: fantasy;
        }

        body {
            min-height: 100vh;
            background: url('../img/run.jpg') center/cover no-repeat;
            display: grid;
            justify-content: center;
            align-items: center;
        }

        main.table {
            width: 82vw;
            height: 90vh;
            background-color: #fff5;
            backdrop-filter: blur(7px);
            box-shadow: 0 .4rem .8rem #0005;
            border-radius: .8rem;
            overflow: hidden;
        }

        thead {
            font-size: 1.25rem;
            line-height: 2.5;
        }

        .table__header {
            width: 100%;
            height: 20%;
            background-color: #fff4;
            padding: .8rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .table__body {
            max-height: calc(89% - 1.6rem);
            background-color: #fffb;
            margin: .8rem auto;
            border-radius: .6rem;
            overflow: auto;
            overflow: overlay;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1.5rem;
            border: 2px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .table__body table td:last-child {
            display: flex;
            gap: 1rem;
        }

        .table__body table td a {
            text-decoration: none;
            padding: 0.3rem 0.6rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>

<body>
    <main class="table">
        <section class="table__header">
            <h1>Users And Coaches</h1>
        </section>
        <section class="table__body">
            @if (Model != null && Model.Any())
            {
<h3>Users (User Role 1)</h3>
                <table>
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>User Surname</th>
                            <th>Şifre</th>
                            <th>Doğum tarihi</th>
                            <th>User Email</th>
                            <th>Cinsiyet</th>
                            <th>Telefon</th>
                            <th>Fotoğraf</th>
                            <th>Actions</th> <!-- Add a new column for actions -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Where(u => u.UserRole == 1 && u.RecordStatus == 1))
                        {
        <tr>
            <td>@user.UserId</td>
            <td>@user.UserName</td>
            <td>@user.UserSurname</td>
            <td>@user.UserPass</td>
            <td>@user.UserBirth</td>
            <td>@user.UserMail</td>
            <td>@user.UserGender</td>
            <td>@user.UserPhone</td>
            <td>@user.UserPhoto</td>
            <td>
                <!-- Add an Edit button -->
                <a href="@Url.Action("Edit", "User", new { userId = user.UserId })">Edit</a>
            </td>
            <td>
                <!-- Add an Edit button -->
                <a href="@Url.Action("Disable", "User", new { userId = user.UserId })">Devre Dışı Bırak</a>
            </td>
            <td>
                <a href="@Url.Action("Enable", "User", new { userId = user.UserId })">Etkinleştir</a>
            </td>
        </tr>
}
                    </tbody>
                </table>
                                <p>
                                    <!-- Add a button to add a new user -->
                                    <a href="@Url.Action("AddOrEdit", "User")" class="btn btn-success">Add New User</a>
                                </p>

                                                <h3>Coaches (User Role 3)</h3>
                                                                <table>
                                                                    <thead>
                                                                        <tr>
                                                                            <th>User ID</th>
                                                                            <th>User Name</th>
                                                                            <th>User Surname</th>
                                                                            <th>Şifre</th>
                                                                            <th>Doğum tarihi</th>
                                                                            <th>User Email</th>
                                                                            <th>Cinsiyet</th>
                                                                            <th>Telefon</th>
                                                                            <th>Fotoğraf</th>
                                                                            <th>Actions</th> <!-- Add a new column for actions -->
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var user in Model.Where(u => u.UserRole == 3))
                                                                        {
                                                        <tr>
                                                            <td>@user.UserId</td>
                                                            <td>@user.UserName</td>
                                                            <td>@user.UserSurname</td>
                                                            <td>@user.UserPass</td>
                                                            <td>@user.UserBirth</td>
                                                            <td>@user.UserMail</td>
                                                            <td>@user.UserGender</td>
                                                            <td>@user.UserPhone</td>
                                                            <td>@user.UserPhoto</td>
                                                            <td>
                                                                <!-- Add an Edit button -->
                                                                <a href="@Url.Action("Edit", "User", new { userId = user.UserId })">Edit</a>
                                                            </td>
                                                            <td>

                                                                <a href="@Url.Action("Disable", "User", new { userId = user.UserId })">Devre Dışı Bırak</a>
                                                            </td>
                                                            <td>
                                                                <a href="@Url.Action("Enable", "User", new { userId = user.UserId })">Etkinleştir</a>
                                                            </td>
                                                        </tr>
}
                                                                    </tbody>
                                                                </table>
                                                                                <p>
                                                                                    <!-- Add a button to add a new coach -->
                                                                                    <a href="@Url.Action("AddOrEdit", "User")" class="btn btn-success">Add New Coach</a>
                                                                                </p> }
                                                                            else
                                                                            {
                                                                <p>No users found.</p>}
        </section>
    </main>
</body>

</html>

</html>